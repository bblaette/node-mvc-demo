
<ul class="pagination navbar-nav w-100 justify-content-center">
<% if (!meta.page_prev) { %>
    <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1"><%= meta.pages_jump[1].label %></a>
    </li>
<% } else { %>
    <li class="page-item">
        <a class="page-link" href="<%= site_base %><%= meta.pages_jump[1].link %>" tabindex="-1">
            <%= meta.pages_jump[1].label %>
        </a>
    </li>
<% } %>

<% for (var p = 0; p < meta.pages.length; p++) { %>
    <li class="page-item<%= (p+1 == meta.page) ? " active" : "" %>">
        <a class="page-link" href="<%= site_base %><%= meta.pages[p].link %>">
            <%= meta.pages[p].label %>
        </a>
    </li>
<% } %>

<% if (!meta.page_next) { %>
    <li class="page-item disabled">
        <a class="page-link" href="#"><%= meta.pages_jump[2].label %></a>
    </li>
<% } else { %>
    <li class="page-item">
        <a class="page-link" href="<%= site_base %><%= meta.pages_jump[2].link %>">
            <%= meta.pages_jump[2].label %>
        </a>
    </li>
<% } %>
</ul>
